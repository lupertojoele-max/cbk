# CBK Racing - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API Base URL
# Development: http://localhost:8000
# Production: https://api.cbkracing.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# Application Configuration
# =============================================================================

# Application Environment
# Options: development, staging, production
NODE_ENV=development

# Enable debug mode (optional)
# NEXT_PUBLIC_DEBUG=true

# =============================================================================
# Third Party Services (if needed)
# =============================================================================

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# OpenAI API Configuration (for AI-powered chatbot)
# Get your API key from: https://platform.openai.com/api-keys
# The chatbot will work without this, but will show a fallback message
# OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Alternative: Anthropic Claude API (if you prefer Claude over OpenAI)
# Get your API key from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Build Configuration
# =============================================================================

# Disable telemetry collection
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# Security & Performance
# =============================================================================

# Rate limiting (if backend supports it)
# API_RATE_LIMIT=100

# Cache TTL settings (seconds)
# CACHE_TTL_KARTS=300
# CACHE_TTL_NEWS=300
# CACHE_TTL_EVENTS=180
# CACHE_TTL_SPONSORS=3600

# =============================================================================
# Development & Debugging
# =============================================================================

# Force mock data usage (useful for frontend development)
# Set to 'true' to always use mock data regardless of API availability
# NEXT_PUBLIC_FORCE_MOCK_DATA=false

# API request timeout (milliseconds)
# API_TIMEOUT=10000

# =============================================================================
# Deployment
# =============================================================================

# Site URL (for sitemap generation)
# NEXT_PUBLIC_SITE_URL=https://cbkracing.com

# CDN URL for assets (optional)
# NEXT_PUBLIC_CDN_URL=https://cdn.cbkracing.com